{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@src/*": ["./src/*"],
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@ui-library": ["./src/ui-library"],
            "@ui-library/*": ["./src/ui-library/*"],
            "@lib": ["./src/lib"],
            "@lib/*": ["./src/lib/*"],
            "@layouts": ["./src/layouts"],
            "@layouts/*": ["./src/layouts/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.tsx",
        "**/*.ts",
        ".next/types/**/*.ts",
        "src/pages/_app.js"
    ],
    "exclude": ["node_modules"]
}
